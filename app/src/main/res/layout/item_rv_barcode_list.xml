<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_icon_item_rv_barcode_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/kele" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_item_rv_barcode_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="可乐"
            android:textColor="@color/base_black" />

        <TextView
            android:id="@+id/tv_des_item_rv_barcode_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="可乐"
            android:textColor="@color/base_black" />

        <TextView
            android:id="@+id/tv_barcode_item_rv_barcode_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="121313131"
            android:textColor="@color/default_color" />
    </LinearLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_solid_bg_barcode_item"
        android:text="加入"
        android:textColor="@color/white" />
</LinearLayout>